* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  background: url('https://github.com/sparktacular/10Sparks-photo/blob/main/bg%203.jpg?raw=true') no-repeat center center fixed;
  background-size: cover;
  font-family: 'Jaini', serif;
  color: #FFACD4;
  font-size: clamp(14px, 3vw, 16px);
  overflow-x: hidden;
}

header {
  height: 18vh;
  position: relative;
}

.header-container {
  display: flex;
  align-items: center;
  padding: 10px 16px;
  background-color: rgba(0, 0, 0, 0.8);
  height: 80%;
  width: 100%;
  position: relative;
}

.left-section, .right-section {
  display: flex;
  align-items: center;
  gap: 16px;
  flex: 1;
}

.left-section {
  justify-content: flex-start;
}

.right-section {
  justify-content: flex-end;
}

.header-link {
  font-size: min(1.8vw, 18px);
  text-decoration: none;
  color: white;
  transition: color 0.3s ease;
}

.header-link:hover {
  color: #FF5AA4;
}

.logo-container {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  height: 100%;
  max-width: 60%;
}

.logo-container img {
  height: 100%;
  width: auto;
  object-fit: contain;
}

.menu-toggle {
  display: none;
  flex-direction: column;
  justify-content: center;
  gap: 5px;
  width: 30px;
  height: 30px;
  cursor: pointer;
  position: absolute;
  right: 16px;
  top: 50%;
  transform: translateY(-50%);
  z-index: 1001; /* выше других элементов */
}

.menu-toggle .bar {
  width: 24px;
  height: 3px;
  background-color: white;
  border-radius: 2px;
  transition: all 0.3s ease;
}

.mobile-menu {
  display: none;
  flex-direction: column;
  background-color: rgba(0, 0, 0, 0.8);
  position: absolute;
  top: 100%;
  right: 0;
  padding: 10px 0;
  border-radius: 0 0 0 16px;
  z-index: 1000;
  width: fit-content;
  max-width: 85vw;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.4);
}

.mobile-menu.open {
  display: flex;
}

.menu-toggle.open .bar:nth-child(1) {
  transform: translateY(8px) rotate(45deg);
}

.menu-toggle.open .bar:nth-child(2) {
  opacity: 0;
}

.menu-toggle.open .bar:nth-child(3) {
  transform: translateY(-8px) rotate(-45deg);
}

.mobile-link {
  color: #FFACD4;
  text-decoration: none;
  padding: 8px 20px;
  font-size: 14px;
  transition: all 0.3s ease;
  border-radius: 6px;
  margin: 0;
}

.mobile-link:hover, .mobile-link.active {
  color: #FF5AA4;
  background-color: rgba(255, 90, 164, 0.1);
}

.avatar-carousel-wrapper {
  padding: 15px;
  width: calc(100% - 30px);
  margin: 0 auto;
  box-sizing: border-box;
}

.avatar-carousel-container {
  display: flex;
  align-items: flex-start;
  justify-content: center;
  gap: 12px;
  width: 100%;
  flex-wrap: wrap;
}

.avatar {
  border-radius: 50%;
  width: 120px;
  height: 120px;
  object-fit: cover;
  flex-shrink: 0;
  position: relative;
  z-index: 2; /* Чтобы аватар был поверх карусели */
}

.carousel-container {
  position: relative;
  width: calc(100% - 135px);
  flex-grow: 1;
  align-self: flex-start;
  overflow: hidden; /* Важно: скрываем выходящие за пределы изображения */
  box-sizing: border-box;
  z-index: 1;
}

.carousel {
  position: relative;
  width: 100%;
  overflow: visible;
}

.carousel-inner {
  display: flex;
  transition: transform 0.5s ease;
  gap: 16px; /* Вместо padding на элементах сделаем gap */
}

.carousel-item {
  flex: 0 0 auto;
  /* padding: 0 8px; Убираем padding */
  display: flex;
  justify-content: center;
  /* margin убираем, потому что gap теперь в carousel-inner */
}

.carousel-item img {
  width: 100%;
  aspect-ratio: 1 / 1;
  object-fit: cover;
  border-radius: 5px;
  margin: 0 auto;

  /* Ограничения по размеру */
  max-width: 160px;
  max-height: 160px;
  min-width: 130px;
  min-height: 130px;
  pointer-events: none;
  user-select: none;
}

@media (max-width: 768px) {
  .carousel-item img {
    max-width: 140px;
    max-height: 140px;
    min-width: 110px;
    min-height: 110px;
  }
}

@media (max-width: 480px) {
  .carousel-item img {
    max-width: 120px;
    max-height: 120px;
    min-width: 100px;
    min-height: 100px;
  }
}

.carousel-control {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: none;
  color: #FF5AA4; /* постоянный розовый цвет */
  border: none;
  font-size: 32px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  user-select: none;
  padding: 0;
  width: auto;
  height: auto;
}

/* Удаляем :hover, если он есть */
.carousel-control:hover {
  color: #FF5AA4; /* оставляем тот же цвет */
}

.carousel-control.prev {
  left: 4px; /* Поставим кнопки чуть внутри, чтобы не выходили за пределы */
}

.carousel-control.next {
  right: 4px;
}

/* === Адаптация для мобильных устройств === */
@media (max-width: 768px) {
  .left-section, .right-section {
    display: none;
  }

  .menu-toggle {
    display: flex;
  }

  .logo-container {
    left: 20px;
    transform: none;
    max-width: calc(100% - 70px);
  }

  .avatar {
    width: 100px;
    height: 100px;
  }

  .carousel-container {
    width: calc(100% - 115px);
  }

  .carousel-control {
    width: 30px;
    height: 30px;
    font-size: 16px;
  }

  .carousel-control.prev {
    left: 4px;
  }

  .carousel-control.next {
    right: 4px;
  }

  .carousel-item img {
    max-width: 140px;
    max-height: 140px;
  }
}

@media (max-width: 480px) {
  .avatar {
    width: 60px;
    height: 60px;
  }

  .carousel-control {
    width: 24px;
    height: 24px;
    font-size: 14px;
  }

  .carousel-control.prev {
    left: 3px;
  }

  .carousel-control.next {
    right: 3px;
  }

  .carousel-item img {
    max-width: 120px;
    max-height: 120px;
  }
}



document.addEventListener('DOMContentLoaded', () => {
  // Меню
  const menuToggle = document.getElementById('menuToggle');
  const mobileMenu = document.getElementById('mobileMenu');
  const mobileLinks = document.querySelectorAll('.mobile-link');

  const toggleMenu = () => {
    menuToggle.classList.toggle('open');
    mobileMenu.classList.toggle('open');
  };

  const closeMenu = () => {
    menuToggle.classList.remove('open');
    mobileMenu.classList.remove('open');
  };

  menuToggle.addEventListener('click', (e) => {
    e.stopPropagation();
    toggleMenu();
  });

  document.addEventListener('click', (e) => {
    if (!mobileMenu.contains(e.target) && !menuToggle.contains(e.target)) {
      closeMenu();
    }
  });

  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      mobileLinks.forEach(l => l.classList.remove('active'));
      link.classList.add('active');
      closeMenu();
    });
  });

  // Карусель
  const carouselInner = document.querySelector('.carousel-inner');
  const carouselItems = Array.from(carouselInner.children);
  const prevBtn = document.querySelector('.carousel-control.prev');
  const nextBtn = document.querySelector('.carousel-control.next');

  let currentIndex = 0;

  // Клонируем первые 3 слайда в конец для плавного цикла
  const cloneCount = 3;
  for (let i = 0; i < cloneCount; i++) {
    const clone = carouselItems[i].cloneNode(true);
    carouselInner.appendChild(clone);
  }

  const gap = 16; // из CSS

  function getSlideWidth() {
    const item = carouselInner.querySelector('.carousel-item');
    if (!item) return 0;
    const style = window.getComputedStyle(item);
    const width = item.getBoundingClientRect().width;
    // marginRight не нужен, так как gap через flex gap
    return width + gap;
  }

  let slideWidth = getSlideWidth();

  window.addEventListener('resize', () => {
    slideWidth = getSlideWidth();
    moveToIndex(currentIndex);
  });

  function moveToIndex(index) {
    carouselInner.style.transition = 'transform 0.5s ease';
    carouselInner.style.transform = `translateX(${-slideWidth * index}px)`;
  }

  function checkLoop() {
    if (currentIndex >= carouselItems.length) {
      carouselInner.style.transition = 'none';
      currentIndex = 0;
      carouselInner.style.transform = `translateX(0)`;
    } else if (currentIndex < 0) {
      currentIndex = carouselItems.length - 1;
      carouselInner.style.transition = 'none';
      carouselInner.style.transform = `translateX(${-slideWidth * currentIndex}px)`;
    }
  }

  prevBtn.addEventListener('click', () => {
    currentIndex--;
    moveToIndex(currentIndex);
    setTimeout(checkLoop, 500);
  });

  nextBtn.addEventListener('click', () => {
    currentIndex++;
    moveToIndex(currentIndex);
    setTimeout(checkLoop, 500);
  });

  // Добавляем поддержку свайпа
  let startX = 0;
  let isDragging = false;
  let currentTranslate = 0;
  let prevTranslate = 0;
  let animationID = 0;

  carouselInner.addEventListener('touchstart', touchStart);
  carouselInner.addEventListener('touchmove', touchMove);
  carouselInner.addEventListener('touchend', touchEnd);

  function touchStart(event) {
    startX = event.touches[0].clientX;
    isDragging = true;
    carouselInner.style.transition = 'none';
  }

  function touchMove(event) {
    if (!isDragging) return;
    const currentX = event.touches[0].clientX;
    const diff = currentX - startX;

    carouselInner.style.transform = `translateX(${-slideWidth * currentIndex + diff}px)`;
  }

  function touchEnd(event) {
    isDragging = false;
    const endX = event.changedTouches[0].clientX;
    const diff = endX - startX;

    // Порог для перелистывания
    const swipeThreshold = slideWidth / 4;

    if (diff > swipeThreshold) {
      // Свайп вправо — листаем назад
      currentIndex--;
    } else if (diff < -swipeThreshold) {
      // Свайп влево — листаем вперёд
      currentIndex++;
    }
    carouselInner.style.transition = 'transform 0.5s ease';
    moveToIndex(currentIndex);

    setTimeout(checkLoop, 500);
  }

  // Инициализация
  moveToIndex(0);
});
