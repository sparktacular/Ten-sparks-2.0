/* Добавьте эти стили в ваш файл styles.css */

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  background: url('https://github.com/sparktacular/10Sparks-photo/blob/main/bg%203.jpg?raw=true') no-repeat center center fixed;
  background-size: cover;
  font-family: 'Jaini', serif;
  color: #FFACD4;
  font-size: clamp(14px, 3vw, 16px);
  overflow-x: hidden;
}

h1, h2 {
  color: #FF5AA4;
  text-align: center;
}

h1 {
  font-size: clamp(25px, 5.7vw, 30px);
}

h2 {
  font-size: clamp(20px, 4vw, 25px);
}

/* Header Styles */
header {
  height: 18vh;
  position: relative;
}

.header-container {
  display: flex;
  align-items: center;
  padding: 10px 16px;
  background-color: rgba(0, 0, 0, 0.8);
  height: 80%;
  width: 100%;
  position: relative;
}

.left-section, .right-section {
  display: flex;
  align-items: center;
  gap: 16px;
  flex: 1;
}

.left-section {
  justify-content: flex-start;
}

.right-section {
  justify-content: flex-end;
}

.header-link {
  font-size: min(1.8vw, 18px);
  text-decoration: none;
  color: white;
  transition: color 0.3s ease;
}

.header-link:hover {
  color: #FF5AA4;
}

.logo-container {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  height: 100%;
  max-width: 60%;
}

.logo-container img {
  height: 100%;
  width: auto;
  object-fit: contain;
}

.menu-toggle {
  display: none;
  flex-direction: column;
  justify-content: center;
  gap: 5px;
  width: 30px;
  height: 30px;
  cursor: pointer;
  position: absolute;
  right: 16px;
  top: 50%;
  transform: translateY(-50%);
  z-index: 1001;
}

.menu-toggle .bar {
  width: 24px;
  height: 3px;
  background-color: white;
  border-radius: 2px;
  transition: all 0.3s ease;
}

.mobile-menu {
  display: none;
  flex-direction: column;
  background-color: rgba(0, 0, 0, 0.8);
  position: absolute;
  top: 100%; /* Убираем -10px, чтобы меню прилегало к хедеру */
  right: 0; /* Прижимаем к правому краю */
  padding: 10px 0; /* Оставляем отступы только сверху и снизу */
  border-radius: 0 0 0 16px; /* Скругляем только левые нижние углы */
  z-index: 1000;
  width: fit-content;
  max-width: 85vw;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.4);
}

.mobile-menu.open {
  display: flex;
}

.menu-toggle.open .bar:nth-child(1) {
  transform: translateY(8px) rotate(45deg);
}

.menu-toggle.open .bar:nth-child(2) {
  opacity: 0;
}

.menu-toggle.open .bar:nth-child(3) {
  transform: translateY(-8px) rotate(-45deg);
}

.mobile-link {
  color: #FFACD4;
  text-decoration: none;
  padding: 8px 20px; /* Увеличиваем горизонтальные отступы */
  font-size: 14px;
  transition: all 0.3s ease;
  border-radius: 6px; /* Убираем скругление у пунктов */
  margin: 0; /* Убираем отступы между пунктами */
}

.mobile-link:hover, .mobile-link.active {
  color: #FF5AA4;
  background-color: rgba(255, 90, 164, 0.1);
}
/* Main Content Styles - Ключевая часть */
.main-content {
  padding: 20px;
  display: flex;
  justify-content: center;
}

.content-wrapper {
  display: flex;
  align-items: flex-start;
  gap: 20px;
  width: 100%;
  max-width: 1200px;
}

.text-content {
  flex: 1;
  min-width: 200px;
  padding-top: 10px;
}

/* Section Styles */
section {
  padding: 20px;
  max-width: 1200px;
  margin: 0 auto;
}


/* Responsive Adjustments */
@media (max-width: 768px) {
  .left-section, .right-section {
    display: none;
  }
  
  .menu-toggle {
    display: flex;
  }
  
  .logo-container {
    left: 20px;
    transform: none;
    max-width: calc(100% - 70px);
  }
  
  /* Основные корректировки для контента */
  .content-wrapper {
    gap: 15px;
  }
  
@media (max-width: 480px) {
  .content-wrapper {
    gap: 10px;
  }
  .text-content {
    min-width: 0;
  }
}
/* Обновленные стили для компактного расположения */

.image-section {
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 10px;
}

.top-images {
  display: flex;
  gap: 10px;
  margin-bottom: 15px;
  align-items: center;
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
  margin-right: 5px;
}

.avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.stretched-image {
  flex-grow: 1;
  height: 80px;
  overflow: hidden;
}

.stretched-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.bottom-images {
  width: 100%;
  padding: 0 5px;
}

.carousel-container {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.carousel {
  width: 100%;
  overflow-x: auto;
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
  padding: 0 30px;
}

.carousel::-webkit-scrollbar {
  display: none;
}

.carousel-inner {
  display: flex;
  gap: 8px;
  padding: 5px 0;
}

.carousel-item {
  flex: 0 0 calc(33.333% - 6px);
  height: 100px;
  overflow: hidden;
  border-radius: 5px;
  min-width: 0;
}

.carousel-item img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.carousel-control {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(0, 0, 0, 0.7);
  color: white;
  border: none;
  width: 30px;
  height: 30px;
  border-radius: 50%;
  cursor: pointer;
  font-size: 16px;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.carousel-control.prev {
  left: 0;
}

.carousel-control.next {
  right: 0;
}

@media (max-width: 768px) {
  .avatar {
    width: 60px;
    height: 60px;
  }
  
  .stretched-image {
    height: 60px;
  }
  
  .carousel-item {
    flex: 0 0 calc(50% - 5px);
    height: 80px;
  }
}

@media (max-width: 480px) {
  .avatar {
    width: 50px;
    height: 50px;
  }
  
  .stretched-image {
    height: 50px;
  }
  
  .carousel-item {
    flex: 0 0 100%;
    height: 70px;
  }
  
  .carousel-control {
    width: 25px;
    height: 25px;
    font-size: 14px;
  }
}


document.addEventListener('DOMContentLoaded', () => {
  const menuToggle = document.getElementById('menuToggle');
  const mobileMenu = document.getElementById('mobileMenu');
  const mobileLinks = document.querySelectorAll('.mobile-link');
  
  const toggleMenu = () => {
    menuToggle.classList.toggle('open');
    mobileMenu.classList.toggle('open');
  };
  
  const closeMenu = () => {
    menuToggle.classList.remove('open');
    mobileMenu.classList.remove('open');
  };
  
  menuToggle.addEventListener('click', (e) => {
    e.stopPropagation();
    toggleMenu();
  });
  
  document.addEventListener('click', (e) => {
    if (!mobileMenu.contains(e.target) && !menuToggle.contains(e.target)) {
      closeMenu();
    }
  });
  
  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      mobileLinks.forEach(l => l.classList.remove('active'));
      link.classList.add('active');
      closeMenu();
    });
  });
});

// Обновленный скрипт для карусели

let currentIndex = 0;
const carousel = document.querySelector('.carousel');
const items = document.querySelectorAll('.carousel-item');
const itemCount = items.length;

function moveCarousel(direction) {
  currentIndex = (currentIndex + direction + itemCount) % itemCount;
  const itemWidth = items[0].offsetWidth + 8; // ширина элемента + gap
  const scrollPosition = currentIndex * itemWidth;
  
  carousel.scrollTo({
    left: scrollPosition,
    behavior: 'smooth'
  });
}

