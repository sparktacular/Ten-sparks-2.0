* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  background: url('https://github.com/sparktacular/Ten-sparks-2.0/blob/main/bg%205.jpg?raw=true') no-repeat center center fixed;
  background-size: cover;
  font-family: 'Jaini', serif;
  color: #FFACD4;
  overflow-x: hidden;
}

header {
  height: 20vh;
}

.header-container {
  display: flex;
  align-items: center;
  padding: 16px;
  background-color: rgba(0, 0, 0, 0.8);
  height: 70%;
  width: 100%;
}

.left-section,
.right-section {
  display: flex;
  align-items: center;
  gap: 16px;
}

.left-section {
  justify-content: flex-start;
}

.right-section {
  justify-content: flex-end;
}

.logo-container {
  flex-grow: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.logo-container img {
  width: 15vw;
  height: 20vh;
  object-fit: contain;
  cursor: pointer;
}

.header-link {
  font-size: 1.8vw;
  text-decoration: none;
  color: white;
  transition: color 0.3s ease;
}

/* --- Новое оформление для аватара --- */

.character-avatar {
  display: flex;
  flex-direction: column;
  width: min(30vw, 120px);
  position: fixed;
  top: 16vh;
  left: 2vh;
  z-index: 1000;
}

.character-avatar img {
  width: 100%;
  aspect-ratio: 1 / 1;
  border-radius: 50%;
  object-fit: cover;
  display: block;
}

.character-avatar h1 {
  margin-top: 12px;
  text-align: center;
  font-size: clamp(14px, 4vw, 18px);
  color: #FF5AA4;
}

/* Контейнер для фотографии */
.character-photo {
  position: fixed;
  top: 16vh;
  height: min(30vw, 120px);
  left: calc(2vh + min(30vw, 120px) + 16px); /* фиксированный отступ 16px между аватаром и фото */
  right: 2vh;
  display: flex;
  align-items: center;
  overflow: hidden;
}

.character-photo img {
  height: 100%;
  width: 100%;
  object-fit: cover;
  border-radius: 4px;
}
