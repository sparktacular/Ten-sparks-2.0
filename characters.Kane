* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  background: url('https://github.com/sparktacular/10Sparks-photo/blob/main/bg%203.jpg?raw=true') no-repeat center center fixed;
  background-size: cover;
  font-family: 'Jaini', serif;
  color: #FFACD4;
  overflow-x: hidden;
}

header {
  height: 20vh;
}

.header-container {
  display: flex;
  align-items: center;
  padding: 16px;
  background-color: rgba(0, 0, 0, 0.8);
  height: 70%;
  width: 100%;
}

.left-section,
.right-section {
  display: flex;
  align-items: center;
  gap: 16px;
}

.left-section {
  justify-content: flex-start;
}

.right-section {
  justify-content: flex-end;
}

.logo-container {
  flex-grow: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.logo-container img {
  width: 15vw;
  height: 20vh;
  object-fit: contain;
  cursor: pointer;
}

.header-link {
  font-size: 1.8vw;
  text-decoration: none;
  color: white;
  transition: color 0.3s ease;
}
.character-photo img {
  object-fit: cover;
    width: 100%;
   height: 100%;
  overflow: hidden;
   margin-top: -30px;
}
.text {
  padding: 16px;
   word-wrap: break-word;
   line-height: 1.5;
}
